{{!-- burger image and header --}}
<div class="row align-items-center">
  <div class="col text-center">
    <img class="happy-burger" src="/assets/images/burger.jpg" alt="cheeseburger">

    <h1 class="mb-5">Burger Bonanza</h1>
  </div>
</div>

{{!-- burgers to eat --}}
<div class="row">
  <div class="col-md-6 text-center">
    <h3>Burgers To Devour</h3>
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>


  {{!-- burgers eaten --}}

  <div class="col-md-6 text-center">
    <h3>Burgers Eaten</h3>
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>


{{!-- burger form --}}

<div class="row">
  <div class="col text-center">
    <h3>Add a Burger</h3>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Add a Burger:</label>
        <input type="text" id="ca" name="burger_name">
      </div>

      <div class="form-group">
        <input type="radio" name="devoured" value="1" checked> Devoured!<br>
        <input type="radio" name="devoured" value="0"> Not devoured!
      </div>

      <button type="submit">Add Burger</button>
    </form>

  </div>
</div>